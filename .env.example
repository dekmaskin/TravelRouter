# TravelNet Portal Environment Configuration
# Copy this file to .env.production and customize for your deployment

# Application Settings
APP_NAME="TravelNet Portal"
SECRET_KEY=your-secure-secret-key-here-generate-with-secrets.token_hex(32)
LOG_LEVEL=INFO

# Network Interface Configuration
WIFI_INTERFACE=wlan1
AP_INTERFACE=wlan0
ETH_INTERFACE=eth0

# Access Point Settings
DEFAULT_AP_SSID=TravelNet-Portal
DEFAULT_AP_PASSWORD=TravelNet2026!

# Security Settings
MAX_REQUESTS_PER_MINUTE=300
MAX_CONNECTION_ATTEMPTS=5
IP_BLOCK_DURATION=30
RATE_LIMIT_HIGH=2000
RATE_LIMIT_NORMAL=500
RATE_LIMIT_LOW=100

# Feature Toggles
ENABLE_SSH_MANAGEMENT=true
ENABLE_SYSTEM_REBOOT=true
ENABLE_SYSTEM_UPDATE=true
ENABLE_QR_GENERATION=true
ENABLE_VPN_TUNNEL=true

# Development Settings (set to false in production)
DEBUG=false
TESTING=false